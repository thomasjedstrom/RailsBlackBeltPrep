<!DOCTYPE html>
<html>
<head>
	<title>RailsBlackbeltPrep</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
</head>
<body>
<div class="container">
	<% if current_user %>
		<div class="navbar">
			<div class="navbarstuff">

				<% if current_page?(events_path) %>
					<a href="/users/<%= current_user.id %>/edit" class="btn">Edit My Profile</a>
				<% else %>
					<a href="/events/" class="btn">Events Dashboard</a>
				<% end %>

				<form action='/sessions/logout' method='post' class="ib">
					<input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
					<input type="hidden" name="_method" value="delete"/>
					<input type='submit' value='Log Out' class="btn right">
				</form>

			</div>
		</div>
	<% end %>

	<%= yield %>

</div>
</body>
</html>
